    "scripts": {
        "coverage": "phpunit --coverage-html reports/",
        "test": "phpunit tests/"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SlackMessage\\Providers\\SlackProvider"
            ]
        }
    }
